<Window x:Class="lesson2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lesson2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
        <Button Content="Button" Width="NaN" DockPanel.Dock="Right"/>
        <Button x:Name="buttonHello" Content="1" DockPanel.Dock="Top" Background="#FFEF0D0D" FontFamily="Arial Narrow" Height="200" FontSize="72"/>
        <Button Content="Button" Width="NaN" DockPanel.Dock="Bottom"/>
        <Button Content="Button" Width="NaN" DockPanel.Dock="Left"/>
        </StackPanel>
    </DockPanel>
</Window>
