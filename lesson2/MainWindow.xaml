<Window x:Class="lesson2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lesson2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" VerticalAlignment="Bottom">
        <Button Content="Button" Width="NaN" Click="Button_Click"/>
        <Button x:Name="buttonHello" Content="1" Background="#FFEF0D0D" FontFamily="Arial Narrow" FontSize="72" Margin="20,20,20,20" Click="buttonHello_Click"/>
        <Button Content="Button" Width="NaN"/>
        <Button Content="Button" Width="NaN"/>
            <Label x:Name="labelTest" Content="Привет" Foreground="#FF0E11C5" FontSize="36"/>
        </StackPanel>
        <TextBox x:Name="textBoxOutput" TextWrapping="Wrap" DockPanel.Dock="Bottom" FontSize="36"/>
    </DockPanel>
</Window>
